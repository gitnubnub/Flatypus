<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E5C9"
    android:paddingTop="16dp"> <!-- Reduced from 120dp to 16dp -->

    <!-- Settings Icon -->
    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:src="@drawable/ic_settings"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Notification Icon -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:src="@drawable/ic_notifications_black_24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Notification Count -->
    <TextView
        android:id="@+id/notification_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_notifications_black_24dp"
        android:text="@string/notification_count"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/notification_icon"
        app:layout_constraintTop_toTopOf="@id/notification_icon" />

    <!-- Anchor point for hearts -->
    <View
        android:id="@+id/hearts_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_icon" />

    <!-- Character Image (to be replaced with 3D model) -->
    <ImageView
        android:id="@+id/character_image"
        android:layout_width="355dp"
        android:layout_height="416dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/platypus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hearts_anchor" />

</androidx.constraintlayout.widget.ConstraintLayout>